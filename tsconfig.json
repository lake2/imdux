{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": false,
        "outDir": "dev",
        "noEmit": true,
        "pretty": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "declaration": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": "./src/",
        "rootDir": "./src/",
        "paths": {
            "~/*": ["./public/*"],
            "@/*": ["./src/*"]
        },
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*"]
}
